<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/bg_main2"
    tools:context=".home.HomeActivity">


    <ImageView
        android:id="@+id/chatbotRedirect"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/outline_robot_2_24"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:text="Smart Aid"
        android:layout_marginTop="120dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/symptomChecker"
        android:layout_width="160dp"
        android:layout_height="148dp"
        android:layout_marginLeft="-270dp"
        android:layout_marginTop="270dp"
        android:backgroundTint="@color/white"
        android:elevation="20dp"
        app:cardCornerRadius="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableTop="@drawable/outline_message_24"
            android:drawablePadding="5dp"
            android:padding="18dp"
            android:text="Symptom Checker"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bmiChecker"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:elevation="20dp"
        app:cardCornerRadius="16dp"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="270dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/outline_accessibility_24"
            android:text="Bmi checker"
            android:padding="20dp"
            android:drawablePadding="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:textStyle="bold"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/medicineRemainder"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:elevation="20dp"
        app:cardCornerRadius="16dp"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="-375dp"
        android:layout_marginTop="470dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/outline_medical_services_24"
            android:text="Medicine Reminder"
            android:padding="15dp"
            android:drawablePadding="5dp"
            android:layout_marginTop="25dp"
            android:textStyle="bold"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/emergency"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:elevation="20dp"
        app:cardCornerRadius="16dp"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="470dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/rounded_emergency_home_24"
            android:text="Emergency"
            android:padding="20dp"
            android:drawablePadding="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:textStyle="bold"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/newCard2"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:elevation="20dp"
        app:cardCornerRadius="16dp"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="-368dp"
        android:layout_marginTop="670dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/outline_ecg_heart_24"
            android:text="Heart Rate"
            android:padding="20dp"
            android:drawablePadding="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/newCard"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:elevation="20dp"
        app:cardCornerRadius="16dp"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="670dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/outline_blood_pressure_24"
            android:text="Blood Pressure"
            android:padding="20dp"
            android:drawablePadding="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>