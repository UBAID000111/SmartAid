<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heart Rate Monitor"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="32dp"/>

        <EditText
            android:id="@+id/nameheart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter name"
            android:padding="16dp"
            android:inputType="textLongMessage"
            android:layout_marginBottom="16dp"/>


        <EditText
            android:id="@+id/heartRate1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter calculated Heart rate (morning)"
            android:inputType="numberDecimal"
            android:padding="16dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/heartRate2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter calculated Heart rate (evening)"
            android:inputType="numberDecimal"
            android:padding="16dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/heartRate3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter calculated Heart rate (night)"
            android:inputType="numberDecimal"
            android:padding="16dp"
            android:layout_marginBottom="16dp"/>



        <Button
            android:id="@+id/calculateBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate Heart rate"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:padding="14dp"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>
</ScrollView>